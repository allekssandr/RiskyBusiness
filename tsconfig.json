{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mobile/*": ["./mobile/src/*"],
      "@server/*": ["./server/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "mobile/src/**/*",
    "server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".expo",
    "coverage"
  ],
  "references": [
    { "path": "./mobile" },
    { "path": "./server" }
  ]
}
