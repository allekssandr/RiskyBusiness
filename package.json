{
  "name": "risky-business",
  "version": "1.0.0",
  "description": "Risky Business - Truth or Dare mobile game with LLM integration",
  "private": true,
  "workspaces": [
    "mobile",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:mobile\"",
    "dev:server": "cd server && pnpm run dev",
    "dev:mobile": "cd mobile && pnpm start",
    "build": "pnpm run build:server && pnpm run build:mobile",
    "build:server": "cd server && pnpm build",
    "build:mobile": "cd mobile && pnpm build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "pnpm install && cd server && pnpm install && cd ../mobile && pnpm install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "pnpm": ">=9.0.0"
  }
}
